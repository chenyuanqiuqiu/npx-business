page, .container {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.search-bar {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    background: #ffffff;
    padding: 0 20rpx;
}
.w_cus .van-search__content {
    background-color: #f5f5f5 !important;
    border-radius: 16rpx;
}
.w_cus{
    height: 65rpx !important;
    padding: 0rpx !important;
    line-height: 65rpx !important;
}
.fe_class .van-search__content {
    height: 65rpx !important;
    line-height: 65rpx !important;
}
.tg_class{
    height: 65rpx !important;
    line-height: 65rpx !important;
}
.search-bar .clear {
    position: absolute;
    right: 30rpx;
    bottom: 25rpx;
    z-index: 2;
    height: 50rpx;
    width: 50rpx;
    opacity: 0.35;
}

.search-bar .split {
    padding: 0 30rpx;
    color: #555;
}

.search-bar .picker-opts {
    box-sizing: border-box;
    white-space: nowrap;
    display: flex;
    align-items: center;
    font-size: 25rpx;
    color: #000000;
    float: left;
    height: 100rpx;
    line-height: 100rpx;
}
.input_c{
    width: 75%;
    display: flex;
    margin-left: 15rpx;
    align-items: center;
}
.icon_r{
    font-size: 26rpx;
    font-weight: 600;
    padding: 0 4rpx;
}




.list-detail, .list-city {
    width: 100%;
    height: 100%;
    overflow-y: auto;
    background: #fff;
}

.list-detail .item-nav {
    border-bottom: 1rpx solid #eee;
}

.list-detail .title, .history .title {
    font-size: 30rpx;
    font-weight: 500;
    color: #000;
    line-height: 45rpx;
}

.list-detail .address, .history .address {
    font-size: 26rpx;
    color: #aaa;
    padding-top: 7rpx;
    white-space: normal;
}

/* 城市列表 */

.list-city {
    position: relative;
}

.py {
    box-sizing: border-box;
    background: #eee;
    font-size: 23rpx;
    color: #aaa;
    display: flex;
    align-items: center;
    padding: 10rpx 25rpx;
}

.fullname {
    box-sizing: border-box;
    font-size: 28rpx;
    color: #555;
    padding: 25rpx;
    border-bottom: 1rpx solid #eee;
}

.city-py {
    position: fixed;
    top: 48%;
    right: 0;
    margin-top: -300rpx;
}

.city-py view {
    font-size: 25rpx;
    font-weight: 500;
    width: 60rpx;
    padding: 6rpx 0rpx;
    height: 12px;
    line-height: 12px;
    text-align: center;
    color: #555;
}

.showPy {
    width: 150rpx;
    height: 150rpx;
    background: #fff;
    border-radius: 15rpx;
    line-height: 150rpx;
    text-align: center;
    font-size: 80rpx;
    margin: auto;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 3;
    color: #333;
    box-shadow: 0 0 150rpx rgba(0, 0, 0, 0.35);
}

.hot-city {
    border: 1rpx solid #eee;
    display: inline-block;
    margin: 25rpx 0 0 25rpx;
    padding: 10rpx 25rpx;
    font-size: 25rpx;
    border-radius: 40rpx;
}

/* 历史记录 */

.list-history {
    box-sizing: border-box;
    padding-top: 70rpx;
    height: 100%;
}

.search-history {
    background: #f5f5f5;
    font-size: 25rpx;
    padding: 0 20rpx;
    color: #aaa;
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    line-height: 70rpx;
    margin-top: -70rpx;
    margin-bottom:10rpx
}
.item-nav .icon {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    left: 20rpx;
    top: 40rpx;
}

.clear-history {
    display: inline-block;
    /* float: right; */
    border: 1rpx solid #eee;
    line-height: 40rpx;
    padding: 0 20rpx;
    margin-top: 15rpx;
    background: #fff;
    border-radius: 32rpx;
}
.title_shouh{
    margin-left: 10rpx;
}
.history-item-wrap:active, .item-nav:active {
    background: #eee;
}
.f_w_500{
    font-weight: 500;
}
/* 历史记录 */

.history {
    height: 100%;
    width: 100%;
    background: #fff;
}

.history-item {
    border-bottom: 1rpx solid #e5e5e5;
    overflow: hidden;
    position: relative;
    box-sizing: border-box;
}

.history-item-wrap {
    display: block;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    font-size: 30rpx;
    background: #fff;
    position: relative;
    z-index: 2;
    transition: transform 0.30s linear 0s;
}

.item-nav {
    padding: 20rpx 25rpx 27rpx 60rpx;
    position: relative;
}

.item-nav .icon {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    left: 20rpx;
    top: 40rpx;
}

.history-item-del {
    position: absolute;
    z-index: 1;
    right: 0;
    top: 0;
    height: 100%;
    width: 180rpx;
    text-align: center;
    background: #fb2531;
    color: #fff;
    box-sizing: border-box;
    padding-top: 50rpx;
    font-size: 35rpx;
}

.history-item-del text {
    position: absolute;
    height: 30rpx;
    display: block;
    top: 50%;
    margin-top: -20rpx;
    width: 100%;
}

.from {
    font-size: 30rpx;
    font-weight: bold;
    color: #555;
}

.to {
    font-size: 25rpx;
    color: #aaa;
}

.delHistory {
    color: rgba(255, 255, 255, 0.5);
    display: inline-block;
    float: right;
    margin-top: 35rpx;
    font-size: 25rpx;
    padding: 15rpx 30rpx;
}

.no-data {
    text-align: center;
    font-size: 25rpx;
    color: #aaa;
    width: 80%;
    padding: 100rpx 0;
    margin: 0 auto;
}

.end {
    font-size: 24rpx;
    color: #aaa;
    text-align: center;
    padding: 100rpx 0;
    font-style: italic;
}

