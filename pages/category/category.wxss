page {
  width: 100vw;
  height: 100vh;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}
.search-container {
    background-color: white;
}
  
.search {
    position: relative;
    width: 100vw;
    height: 50rpx;
    display: flex;
    box-sizing: border-box;
    padding-left: 26rpx;
    background: -webkit-linear-gradient(left,#f7eef2,#dae6f9);
}
  
.search .input {
    display: flex;
    box-sizing: border-box;
    background: #F7F8FA;
    height: 62rpx;
    border-radius: 20rpx;
    padding-left: 20rpx;
    line-height: 62rpx;
    font-size: 12px;
}

.search-placeholder {
    font-size: 24rpx;
    color: #A9A6A6;
    line-height: 62rpx;
}
  
.goods-btn {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
}
.cate_main{
